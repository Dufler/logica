	@Override
	public int compareTo(Spedizione s) {
		int compare;
		if (s != null) {
			Date d1 = getDataPartenza() != null ? getDataPartenza() : new Date();
			Date d2 = s.getDataPartenza() != null ? s.getDataPartenza() : new Date();
			compare = d1.compareTo(d2);
		} else {
			compare = -1;
		}
